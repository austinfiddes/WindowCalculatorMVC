@model MyFirstMVCApp.Models.Window

@{
    ViewData["Title"] = "Create Window";
}

<h2>Create Window</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Width"></label>
        <input asp-for="Width" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}