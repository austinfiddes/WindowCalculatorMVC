@model MyFirstMVCApp.Models.Window

@{
    ViewData["Title"] = "Edit Window";
}

<h2>Edit Window</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Width"></label>
        <input asp-for="Width" class="form-control" type="number" step="0.01" />
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" type="number" step="0.01" />
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>